{pre_hooks, [{"(linux|darwin)", compile, "make nif_compile CPP_DRIVER_REV=c97dd437c3730421f006dc4f2e36b533e405d357"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make nif_clean"}]}.

{project_plugins, [rebar3_hex]}.

{deps, [
    {lager, "3.6.9"}
]}.

{erl_opts, [
    warnings_as_errors,
    warn_export_all,
    {parse_transform, lager_transform}
]}.

{profiles, [
    {bench, [
        {extra_src_dirs, ["benchmarks"]},
        {deps, [
            %{cqerl, "1.1.2"},
            {marina, ".*", {git, "https://github.com/lpgauth/marina.git", {tag, "0.3.5"}}}
        ]}
    ]},

    {test, [
        {erl_opts, [
            debug_info,
            nowarn_export_all
        ]},

        {ct_opts, [
            {sys_config, ["./benchmarks/benchmark.config"]}
        ]}
    ]}
]}.
